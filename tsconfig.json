{
    "compilerOptions": {
        "target":                 "es2017",
        "lib":                    [
            "es2017.object",
            "es2015",
            "es2017",
            "esnext",
            "dom"
        ],
        "module":                 "commonjs",
        "moduleResolution":       "node",
        "preserveConstEnums":     true,
        "removeComments":         false,
        "sourceMap":              true,
        "declaration":            true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata":  true,
        "noImplicitAny":          false,
        "outDir":                 "dist",
        "pretty":                 true,
        "typeRoots":              [
            "./node_modules/@types"
        ],
        "types":                  [
            "node",
            "reflect-metadata"
        ]
    },
    "include":         [
        "src/**/*"
    ],
    "exclude":         [
        "dist",
        "node_modules"
    ]
}
